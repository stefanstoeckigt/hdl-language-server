{
  "name": "hdl-language-client",
  "description": "VSCode part of a language server",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "vscode",
  "engines": {
    "vscode": "^1.8.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "vhdl",
        "aliases": [
          "VHDL",
          "vhdl"
        ],
        "extensions": [
          ".vhd",
          ".vhdl",
          ".vho",
          ".vht"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vhdl",
        "scopeName": "source.vhdl",
        "path": "./syntaxes/vhdl.tmLanguage"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "hdl language server configuration",
      "properties": {
        "hdlLanguageServer.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "hdlLanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VSCode and the HDL language Server service."
        },
        "hdlLanguageServer.libraryDeclaration": {
          "type": "string",
          "default": "work",
          "description": "Library location to include in project."
        },
        "hdlLanguageServer.libraries": {
          "type": "array",
          "default": [
            "C:\\Garrison_Technology\\VSCode\\hdl-language-server\\hdl-parser\\VHDL_ANTLR4\\Libraries"
          ],
          "items": {
            "type": "string"
          },
          "description": "Library location to include in project."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.33",
    "@types/node": "^7.0.13",
    "typescript": "^2.1.5",
    "vscode": "^1.0.3"
  },
  "dependencies": {
    "vscode-languageclient": "^3.1.0"
  }
}